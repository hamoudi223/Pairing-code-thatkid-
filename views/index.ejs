<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= config.title %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body style="background-color: <%= config.background %>;">
  <div class="container">
    <img src="<%= config.image %>" alt="logo" class="logo">
    <h1><%= config.title %></h1>
    <h3><%= config.subtitle %></h3>
    <p><%= config.description %></p>
    <form method="POST" action="/generate">
      <input type="text" name="number" placeholder="Entre ton numéro WhatsApp" required>
      <button type="submit" style="background-color: <%= config.buttonColor %>;">GÉNÉRER MON CODE</button>
    </form>

    <% if (typeof pairingCode !== "undefined") { %>
      <div class="result">
        <p>Code pour <strong><%= number %></strong> :</p>
        <input type="text" id="code" value="<%= pairingCode %>" readonly>
        <button onclick="copyCode()">Copier</button>
      </div>
    <% } %>
  </div>

  <script>
    function copyCode() {
      const input = document.getElementById("code");
      input.select();
      document.execCommand("copy");
      alert("Code copié !");
    }
  </script>
</body>
</html>
